#!/bin/sh
cd $(dirname $0)/..

# apply template to html files
find man -type f | grep html$ | sed 's;^man/;;' | 
	xargs -I% sh -c 'sed -n "/<\!--content-->/!p; /<\!--content-->/r man/%" templates/base.html > www/%'

# copy non-html files
find man -type f | grep -v html$ | sed 's;^man/;;' | xargs -I% cp man/% www/%
